.draught {
  display: inline-block;
  size: 40px;
  border-radius: 20px;
  vertical-align: middle;

  &.white {
	background: #ffe090;

    &.selected {
      box-shadow: 0px 0px 15px 10px rgb(248, 255, 119);
    }
  }

  &.black {
	background: #713002;


    &.selected {
      box-shadow: 0px 0px 15px 10px #de9040;
    }
  }
}
